<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebShell</title>
    <link type="text/css" href="~/Content/bootstrap.min.css" rel="stylesheet"/>
</head>
<body>
<div class="container">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">WebShell</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Executables" ? "active" : "")">
                        <a href="@Url.Action("Index", "Executables")">Executables 
                            @(ViewContext.RouteData.Values["controller"].ToString() == "Executables" 
                                ? Html.Raw("<span class=\"sr-only\">(current)</span>")
                                  : new HtmlString(string.Empty))
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "History" ? "active" : "")">
                        <a href="@Url.Action("Index", "History")">Runs History 
                            @(ViewContext.RouteData.Values["controller"].ToString() == "History" 
                                ? Html.Raw("<span class=\"sr-only\">(current)</span>")
                                  : new HtmlString(string.Empty))
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
</div>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>